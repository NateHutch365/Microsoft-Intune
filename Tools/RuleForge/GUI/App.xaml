<Application x:Class="RuleForgeGUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- RuleForge Color Palette - Blacksmith Theme -->
        <Color x:Key="ForgeOrangeColor">#FF9500</Color>
        <Color x:Key="ForgeYellowColor">#FFD700</Color>
        <Color x:Key="ForgeDarkColor">#1E1E1E</Color>
        <Color x:Key="ForgeGrayColor">#2D2D30</Color>
        <Color x:Key="ForgeTextColor">#E0E0E0</Color>
        <Color x:Key="ForgeAccentColor">#3E8E41</Color>
        
        <SolidColorBrush x:Key="ForgeOrangeBrush" Color="{StaticResource ForgeOrangeColor}"/>
        <SolidColorBrush x:Key="ForgeYellowBrush" Color="{StaticResource ForgeYellowColor}"/>
        <SolidColorBrush x:Key="ForgeDarkBrush" Color="{StaticResource ForgeDarkColor}"/>
        <SolidColorBrush x:Key="ForgeGrayBrush" Color="{StaticResource ForgeGrayColor}"/>
        <SolidColorBrush x:Key="ForgeTextBrush" Color="{StaticResource ForgeTextColor}"/>
        <SolidColorBrush x:Key="ForgeAccentBrush" Color="{StaticResource ForgeAccentColor}"/>

        <!-- Button Style -->
        <Style x:Key="ForgeButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ForgeOrangeBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource ForgeYellowBrush}"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="Gray"/>
                                <Setter Property="Foreground" Value="DarkGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ForgeTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource ForgeGrayBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ForgeTextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ForgeOrangeBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ForgeComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource ForgeGrayBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ForgeTextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ForgeOrangeBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="ForgeCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource ForgeTextBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="ForgeLabel" TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource ForgeTextBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="0,5"/>
        </Style>

        <!-- GroupBox Style -->
        <Style x:Key="ForgeGroupBox" TargetType="GroupBox">
            <Setter Property="Foreground" Value="{StaticResource ForgeYellowBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ForgeOrangeBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Application.Resources>
</Application>
